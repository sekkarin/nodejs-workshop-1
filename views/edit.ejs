<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header') %>
  <body>
      
    <h1 class="display-3 text-center">แก้ใขข้อมูล</h1>
    <!-- <div id="result">
        
    </div> -->
    <% if (locals.data) { %>
    <form action="/edit-product/edit/<%= data._id %>" method="POST" class="w-50 mx-auto">
      <div class="mb-1 px-3">
        <label for="" class="form-label">ชื่อสินค้า</label>
        <input
          required
          type="text"
          name="name"
          value="<%= data.name %>"
          id=""
          class="form-control"
          placeholder=""
          aria-describedby="helpId"
        />
      </div>
      <div class="mb-1 px-3">
        <label for="" class="form-label">ราคา</label>
        <input
          required
          type="text"
          name="price"
          id=""
          value="<%= data.price %>"
          class="form-control"
          placeholder=""
          aria-describedby="helpId"
        />
      </div>
      <div class="mb-1 px-3">
        <label for="" class="form-label">คงเหลือ</label>
        <input
          required
          type="text"
          name="stock"
          id=""
          value="<%= data.stock %>"
          class="form-control"
          placeholder=""
          aria-describedby="helpId"
        />
      </div>
      <div class="mb-1 px-3">
        <label for="" class="form-label">วันที่เพิ่มสินค้า</label>
        <input
          
          type="date"
          name="date_added"
          id=""
          
          required
          class="form-control"
          placeholder=""
          aria-describedby="helpId"
        />
      </div>
      <div class="mb-3 px-3">
        <label for="" class="form-label">รายละเอียดสินค้า</label>
        <textarea class="form-control" name="description"  id="" rows="6"><%= data.description %></textarea>
      </div>
      <button type="submit" class="btn btn-success mb-1 px-4 mx-3">
        แก้ใขสินค้า
      </button>
      <button type="reset" class="btn btn-danger mb-1 px-5 mx-3">ล้าง</button>
    </form>
    <% } %>
    <a href="/">หน้าแรก</a>
  </body>
</html>
